<div>
  <%= if Enum.empty?(@users) do %>
    <p>No one has registered yet :(</p>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Solved</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <%= for user <- @users do %>
          <tr>
            <td class="username"><%= user.name %></td>
            <td><%= user.done %></td>
            <td><%= user.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
